% \RequirePackage[skins]{tcolorbox}
\tcbuselibrary{theorems, many}
\newcounter{thereomCounter}[section]

\tcbset{%
theo/.style={%
    enhanced,
    breakable,
    sharp corners,
    toprule=0pt, rightrule=0pt, bottomrule=0pt, leftrule=1mm,
    colback=#1!5, colframe=#1!80!black, coltitle=#1!80!black, 
    % detach title,
    attach boxed title to top left,
    boxed title style={empty, size=minimal, bottom=1.5mm, },
    fonttitle=\bfseries\normalsize,
    overlay unbroken and first ={
        % \node[rotate=0, minimum width=1cm, anchor=south west, font=\bfseries] 
        %    at (frame.north west) {\tcbtitle};
    }
}
}

\newtcbtheorem[use counter=thereomCounter, number within=section]{Theorem}{Theorem}
{theo=red}{th}

\newtcbtheorem[use counter=thereomCounter, number within=section]{Definition}{Definition}
{theo=blue}{def}

\newtcbtheorem[use counter=thereomCounter, number within=section]{Corollary}{Corollary}
{theo=yellow}{cl}

\newtcbtheorem[use counter=thereomCounter, number within=section]{Example}{Example}
{theo=green}{ex}

\newtcbtheorem[use counter=thereomCounter, number within=section]{Lemma}{Lemma}
{theo=magenta}{lem}

\newtcbtheorem[use counter=thereomCounter]{note}{note}
{theo=gray}{note}


\newcounter{todocounter}

\newtcbtheorem[use counter=todocounter]{todo}{todo}
{theo=black}{todo}

